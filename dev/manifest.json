{
  "name":
  "SLVSH PowerUp",

  "description":
  "Adds sugar functionality to SLVSH's website, slvsh.com",

  "version":
  "0.0.8",

  "manifest_version":
  2,

  "icons": {
    "16": "images/ico16.png",
    "48": "images/ico48.png",
    "128": "images/ico128.png"    
  },

  "background": {
        "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {

      "matches":
      [
      "*://*.slvsh.com/*"
      ],

      "exclude_matches":
      [],

      "css":
      ["css/styles.css"],

      "js":
      ["js/jquery-3.0.0.min.js", "js/content.js" ],

      "run_at":
      "document_start"
    }
  ],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "background",
    "storage",
    "*://*.slvsh.com/*",
    "alarms",
    "notifications"
  ]
}
